{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "accounts": {
      "type": "array",
      "minLength": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "user.login": {
            "type": "string",
            "minLength": 1
          },
          "user.password": {
            "type": "string",
            "minLength": 1
          },
          "bot.workWhileWaiting": {
            "type": "boolean"
          },
          "hunt.locationAPCost": {
            "type": "number",
            "minimum": 4,
            "maximum": 8
          },
          "hunt.location": {
            "type": "string",
            "minLength": 1
          },
          "hunt.noAP": {
            "type": "string",
            "enum": [
              "wait",
              "oak",
              "junipier"
            ]
          },
          "hunt.pokeballs": {
            "type": "array",
            "minLength": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name", "when"],
              "properties": {
                "name": {
                  "type": "string",
                  "enum": [
                    "netball",
                    "starterball",
                    "warsball",
                    "nestball",
                    "greatball",
                    "levelball"
                  ]
                },
                "eq": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "when": {
                  "type": "string",
                  "enum": [
                    "starter",
                    "shiny",
                    "name",
                    "always"
                  ]
                }
              }
            }
          },
          "leader.minHealth": {
            "type": "integer",
            "minimum": 1
          },
          "leader.healMethod": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "juice",
                "money",
                "herb",
                "wait"
              ]
            }
          }
      },
        "required": [
          "user.login",
          "user.password",
          "bot.workWhileWaiting",
          "hunt.location",
          "hunt.locationAPCost",
          "hunt.noAP",
          "hunt.pokeballs",
          "leader.minHealth",
          "leader.healMethod"
        ]
      }
    }
  }
}
