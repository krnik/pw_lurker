{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "accounts": {
      "type": "array",
      "minLength": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "user.login": {
            "type": "string",
            "minLength": 1
          },
          "user.password": {
            "type": "string",
            "minLength": 1
          },
          "bot.workOnWait": {
            "type": "boolean"
          },
          "hunt.locationPACost": {
            "type": "number",
            "minimum": 4,
            "maximum": 8
          },
          "hunt.preferredLocation": {
            "type": "string",
            "minLength": 1
          },
          "hunt.refillMethod": {
            "type": "string",
            "enum": [
              "wait",
              "oak",
              "junipier"
            ]
          },
          "hunt.pokeballs": {
            "type": "array",
            "minLength": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name", "when"],
              "properties": {
                "name": {
                  "type": "string",
                  "enum": [
                    "netball",
                    "levelball"
                  ]
                },
                "when": {
                  "type": "string",
                  "enum": [
                    "starter",
                    "shiny",
                    "always"
                  ]
                }
              }
            }
          },
          "leader.minHealth": {
            "type": "integer",
            "minimum": 1
          },
          "leader.healMethod": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "juice",
                "money",
                "herb",
                "wait"
              ]
            }
          }
      },
        "required": [
          "user.login",
          "user.password",
          "bot.workOnWait",
          "hunt.preferredLocation",
          "hunt.locationPACost",
          "hunt.refillMethod",
          "hunt.pokeballs",
          "leader.minHealth",
          "leader.healMethod"
        ]
      }
    }
  }
}
